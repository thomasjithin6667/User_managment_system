<%- include('../layouts/header') %>


  <div class="container p-2 ">

    <div class="container my-5">

      <div class="row d-flex justify-content-center ">

        <div>

          <div class="card p-5">

            <h1 class="my-5 display-3 fw-bold ls-tight">
              Manage All <br />
              <span class="text-primary">At one place</span>
            </h1>

            <div class="row g-3 mt-2">

              <div class="col-md-3">




                <a href="/admin/new-user"> <button type="button" class="btn btn-primary">Add User <i
                      class="fa-solid fa-user-plus"></i></button></a>



              </div>





              <div class="col-md-6">
                <form>
                  <input type="text" name="search" class="form-control" placeholder="Enter name ,email and mobile">

              </div>

              <div class="col-md-3">
                <input class="btn btn-primary" type="submit" value="Search">



              </div>
              </form>

            </div>


            <div class="mt-3">



              <a href="/admin/dashboard">Reset</a>




            </div>






          </div>

        </div>

      </div>





    </div>
    <% if (users.length> 0) { %>
      <table class="table align-middle mb-0 bg-white border ms-2 " style="width: 1280px;">
        <thead class="bg-light">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Position</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (let i=0; i < users.length; i++) { %>
            <tr>
              <td>
                <div class="d-flex align-items-center">
                  <img src="/userImages/<%= users[i].image %>" alt="" style="width: 45px; height: 45px"
                    class="rounded-circle" />
                  <div class="ms-3">
                    <p class="fw-bold mb-1">
                      <%= users[i].name %>
                    </p>
                  </div>
                </div>
              </td>
              <td>
                <p class="fw-normal mb-1">
                  <%= users[i].email %>
                </p>
              </td>
              <td>
                <p class="fw-normal mb-1">
                  <%= users[i].mobile %>
                </p>
              </td>
              <td>User</td>

              <td>
                <a href="/admin/edit-user?id=<%= users[i]._id.toString() %>">
                  <button type="button" class="btn btn-outline-primary ms-1">
                    Edit
                  </button>
                </a>
                <a href="/admin/delete-user?id=<%= users[i]._id.toString() %>">
                  <button type="button" class="btn btn-outline-primary ms-1">Delete</button>
                </a>



              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
      <% } else { %>
        <td>User not found</td>
        <% } %>
  </div>




  <div class="div d-flex justify-content-center my-5">
    <a href="/admin/home"> <button type="button" class="btn btn-outline-primary ms-1">
        Go Back
      </button></a>
  </div>


  <div class="container">

  </div>

  <%- include('../layouts/footer.ejs') %>