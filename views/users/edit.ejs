<%- include('../layouts/header') %>





<section style="background-color: #eee; height: 100vh;">
    <div class="container py-5 ">
      <div class="row">
        <div class="col">
          <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
            <ol class="breadcrumb mb-0">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item"><a href="#">User</a></li>
              <li class="breadcrumb-item active" aria-current="page">Edit Profile</li>
            </ol>
          </nav>
        </div>
      </div>
      <form action="" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="user_id" value="<%=user._id%>"  required>
      <div class="row">
        
        <div class="col-lg-4 ">
          <div class="card p-5 " style="height: 393px;">
            <div class="card-body text-center">
                <img  src="userImages/<%= user.image %>" alt="avatar"
                class="rounded-circle img-fluid my-4" style="width: 120px; height: 120px;">
                
              <h5 class="my-3"><%=user.name%></h5>
              <div class="row">
                <div >
                  <p class="mb-0">Profile image</p>
                </div>
                <div >
                    <div >
                        <div class="form-outline">
                          <input  type="file" name="image" value="<%=user.name%>" class="form-control" />
                        
                        </div>
                      </div>
                </div>


                
              </div>
  
            
            </div>
          </div>
      
        </div>
     

        <div class="col-lg-8 ">
          <div class="card mb-4">
            <div class="card-body my-5">
              <div class="row ">
                <div class="col-sm-3 ">
                  <p class="mb-0">Full Name</p>
                </div>
                <div class="col-sm-9">
                    <div class="col-md-6 ">
                        <div class="form-outline">
                          <input type="text" name="name" value="<%=user.name%>" placeholder="Enter Name" required  class="form-control" />
                        
                        </div>
                      </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                    <div class="col-md-6 ">
                        <div class="form-outline">
                          <input type="email" name="email" value="<%=user.email%>" placeholder="Enter Email" class="form-control" />
                        
                        </div>
                      </div>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Phone</p>
                </div>
                <div class="col-sm-9">
                    <div class="col-md-6 ">
                        <div class="form-outline">
                          <input type="text" name="mno" value="<%=user.mobile%>" placeholder="Enter Mobile" class="form-control" />
                        
                        </div>
                      </div>
                </div>


                
              </div>
         
     
              
            

             
            </div>

            <div class="d-flex  m-4">
              <a href="/home"> <button type="button" class="btn btn-primary">back</button></a> 
                
                <input class="btn btn-outline-primary ms-1"  type="submit" value="Update profile">
              </div>
          </div>
          
        </div>
    </form>
      </div>
    </div>
  </section>


<%- include('../layouts/footer.ejs') %>